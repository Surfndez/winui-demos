<Page
    x:Class="syncfusion.chartdemos.winui.Views.AreaChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:common="using:syncfusion.demoscommon.winui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:syncfusion.chartdemos.winui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <local:AreaChartViewModel />
    </Page.DataContext>
    <Page.Resources>
        <chart:ChartColorModel x:Key="CustomColor">
            <chart:ChartColorModel.CustomBrushes>
                <SolidColorBrush Color="#660BB4C2" />
                <SolidColorBrush Color="#66874DAF" />
                <SolidColorBrush Color="#66DE4383" />
                <SolidColorBrush Color="#EFBB4B" />
                <SolidColorBrush Color="#744BEF" />
                <SolidColorBrush Color="#49CB84" />
                <SolidColorBrush Color="#44ADEA" />
                <SolidColorBrush Color="#EE7851" />
                <SolidColorBrush Color="#CD43DD" />
                <SolidColorBrush Color="#DDD55C" />
            </chart:ChartColorModel.CustomBrushes>
        </chart:ChartColorModel>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <common:DemoLayout x:Name="demo" HeaderText="This samples showcases area chart which connects the Y-points using straight lines and forms an area covered by the lines and X-axis. This area is then shaded with a specified color or gradient.">
                <common:DemoLayout.Example>
                    <chart:SfChart
                        x:Name="Chart"
                        Height="420"
                        HorizontalAlignment="Center"
                        AreaBorderThickness="0"
                        ColorModel="{StaticResource CustomColor}"
                        Palette="Custom">

                        <chart:SfChart.Header>
                            <TextBlock
                                Margin="0,0,0,13"
                                FontFamily="Segoe UI"
                                FontSize="18">
                                Server Performance
                            </TextBlock>
                        </chart:SfChart.Header>

                        <chart:SfChart.PrimaryAxis>
                            <chart:CategoryAxis LabelPlacement="BetweenTicks" ShowGridLines="False" />
                        </chart:SfChart.PrimaryAxis>

                        <chart:SfChart.SecondaryAxis>
                            <chart:NumericalAxis
                                Maximum="80"
                                Minimum="0"
                                ShowGridLines="True" />
                        </chart:SfChart.SecondaryAxis>

                        <chart:SfChart.Legend>
                            <chart:ChartLegend
                                DockPosition="Bottom"
                                FontSize="12"
                                IconHeight="14"
                                IconWidth="14"
                                ItemMargin="2" />
                        </chart:SfChart.Legend>

                        <chart:AreaSeries
                            EnableAnimation="True"
                            ItemsSource="{Binding Performance}"
                            Label="Automation"
                            ShowTooltip="True"
                            XBindingPath="Load"
                            YBindingPath="Server1" />

                        <chart:AreaSeries
                            EnableAnimation="True"
                            ItemsSource="{Binding Performance}"
                            Label="Application"
                            ShowTooltip="True"
                            XBindingPath="Load"
                            YBindingPath="Server2" />

                        <chart:AreaSeries
                            EnableAnimation="True"
                            ItemsSource="{Binding Performance}"
                            Label="Web"
                            ShowTooltip="True"
                            XBindingPath="Load"
                            YBindingPath="Server3" />
                    </chart:SfChart>
                </common:DemoLayout.Example>
                <common:DemoLayout.Xaml>
                    <x:String xml:space="preserve">
&lt;chart:SfChart
       x:Name=&quot;Chart&quot; 
       Palette=&quot;Custom&quot; 
       ColorModel=&quot;{StaticResource CustomColor}&quot; &gt;   
                        
        &lt;chart:SfChart.Legend&gt;
                    &lt;chart:ChartLegend 
                        ItemMargin=&quot;2&quot; 
                        FontSize=&quot;12&quot; 
                        IconHeight=&quot;14&quot; 
                        IconWidth=&quot;14&quot; 
                        DockPosition=&quot;Bottom&quot;&gt;
                    &lt;/chart:ChartLegend&gt;
        &lt;/chart:SfChart.Legend&gt;

        &lt;chart:AreaSeries 
                        ItemsSource=&quot;{Binding Performance}&quot; 
                        XBindingPath=&quot;Load&quot; 
                        YBindingPath=&quot;Server1&quot;
                        Label=&quot;Automation&quot; 
                        EnableAnimation=&quot;True&quot; 
                        ShowTooltip=&quot;True&quot;/&gt;

        &lt;chart:AreaSeries   
                        ItemsSource=&quot;{Binding Performance}&quot; 
                        XBindingPath=&quot;Load&quot; 
                        YBindingPath=&quot;Server2&quot; 
                        Label=&quot;Application&quot; 
                        EnableAnimation=&quot;True&quot; 
                        ShowTooltip=&quot;True&quot;/&gt;

        &lt;chart:AreaSeries 
                        ItemsSource=&quot;{Binding Performance}&quot; 
                        XBindingPath=&quot;Load&quot; 
                        YBindingPath=&quot;Server3&quot;
                        Label=&quot;Web&quot; 
                        EnableAnimation=&quot;True&quot; 
                        ShowTooltip=&quot;True&quot;/&gt;
&lt;/chart:SfChart&gt;
</x:String>
                </common:DemoLayout.Xaml>
            </common:DemoLayout>
        </ScrollViewer>
    </Grid>
</Page>
